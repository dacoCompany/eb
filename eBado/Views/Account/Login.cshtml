@model Web.eBado.Models.Account.LoginModel

@{
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title - My ASP.NET Application</title>
        @Styles.Render("~/Content/css")
        @Styles.Render("~/Content/login")

    </head>
    <body>
        <link href='http://fonts.googleapis.com/css?family=Raleway:400,200' rel='stylesheet' type='text/css'>
        <div class="container">
            <div class="row login_box">
                <div class="col-md-12 col-xs-12" align="center">
                    <div style="height:100px;">
                        <img src="~/Assets/img/secure_lock.png" style="width:50px; height:auto; display: inline-block; margin-bottom:20px;">
                        <h1 style="display: inline-block;">PRIHLASENIE</h1>
                    </div>
                </div>
                <div class="col-md-6 col-xs-6 follow line" align="center">
                    <h3>
                        1234 <br /> <span>INZERATOV</span>
                    </h3>
                </div>
                <div class="col-md-6 col-xs-6 follow line" align="center">
                    <h3>
                        5678 <br /> <span>DOPYTOV</span>
                    </h3>
                </div>

                <div class="col-md-12 col-xs-12 login_control">

                    <div class="control">
                        <div class="label">Uzivatelske meno</div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </div>

                    <div class="control">
                        <div class="label">Heslo</div>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    </div>
                    <div align="center">
                        <button type="submit" class="btn btn-blue">VSTUPIT</button>
                    </div>
                    <div style="margin-top:20px">
                        <p style="color:black">@Html.ActionLink("Zaregistrovat sa", "RegisterUser", "Account") | @Html.ActionLink("Zabudol som heslo", "ForgotPassword", "Account")</p>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
}