@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eBado :( 500</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/error")

</head>
<body>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <div class="container">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <div class="row errorbox nopadding">
                <div class="errorcode centerSign">Error: 500</div>
                <div class="col-lg-12 centerSign push_bottom_20">
                    <span class="errorhead">Internal server error</span>
                </div>
                <div class="col-lg-12 centerSign push_bottom_40">
                    <span class="errortext">Sorry, it appears there has been an internal server error with the page you've requested. Please try refreshing.</span>
                </div>
                <div class="col-sm-4"></div>
                <div class="col-sm-4">
                    <input type="button" value="Go back to home ..." class="btn submitButton" onclick="location.href='@Url.Action("Index","Home")'" />
                </div>
            </div>
            <br>
            <br>
            <footer class="footer">
                <a href='#'>Terms of use</a> | 
                <a href='#'>Privacy Policy</a> | 
                <a href='#'>Contact us</a> | 
                <a href='#'>Feedback</a>
                <p>©2017   eBado Company All rights reserved </p>
            </footer>
        </div>
    </div>
</body>
</html>
